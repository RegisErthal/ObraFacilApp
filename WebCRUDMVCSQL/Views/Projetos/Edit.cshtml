@model ObraFacilApp.Models.ProjetoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Projetos" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-top: 5px">
                <label asp-for="NomeProjeto" class="control-label">Nome do Projeto</label>
                <input asp-for="NomeProjeto" class="form-control" />
                <span asp-validation-for="NomeProjeto" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 5px">
                <label asp-for="UsuarioId" class="control-label">Responsável</label>
                <select asp-for="UsuarioId" class="form-select" asp-items="@ViewBag.UsuariosList">
                    <option value=""></option>
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 5px">
                <label asp-for="EmailResponsavel" class="control-label">E-mail do Responsável</label>
                <input asp-for="EmailResponsavel" class="form-control" />
                <span asp-validation-for="EmailResponsavel" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 5px">
                <label asp-for="CustoMetro" class="control-label">Custo por Metro</label>
                <input asp-for="CustoMetro" class="form-control" />
                <span asp-validation-for="CustoMetro" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 5px">
                <label asp-for="DataInicio" class="control-label">Data de Início</label>
                <input asp-for="DataInicio" class="form-control " type="date" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 5px">
                <label asp-for="DataConclusao" class="control-label">Data de Conclusão</label>
                <input asp-for="DataConclusao" class="form-control" type="date" />
                <span asp-validation-for="DataConclusao" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 15px">
                <input type="file" name="uploadProjeto" />
            </div>

            <div class="form-group" style="margin-top: 15px">
                <input type="submit" value="Salvar" class="btn btn-primary" style="background-color:#255f9c" style="background-color:#255f9c" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
