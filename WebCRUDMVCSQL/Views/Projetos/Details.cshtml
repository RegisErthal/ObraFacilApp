@model ObraFacilApp.Models.ProjetoModel

@{
    ViewData["Title"] = "Details";
}
<div style="background-color: #FFF; border-radius: 4px; padding: 15px;">

    <div class="row">
        <div style="margin-top: 20px; margin-bottom: 10px">
            @foreach (var item in Model.Imagens)
            {
                <div style="float:left; margin: 2px;">
                    <img src="../../imagens/UploadProjetos/@(item.FileName)" class="card-img-top" style="width: 300px" alt="...">
                </div>
            }
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NomeProjeto)</th>
                    <td>@Model.NomeProjeto</td>
                    <td></td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Responsavel)</th>
                    <td>@Model.Responsavel</td>
                    <td></td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EmailResponsavel)</th>
                    <td>@Model.EmailResponsavel</td>
                    <td></td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CustoMetro)</th>
                    <td>@Model.CustoMetro</td>
                    <td></td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
                    <td>@Model.DataInicio.ToString("dd/MM/yyyy")</td>
                    <td></td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataConclusao)</th>
                    <td>@Model.DataConclusao.ToString("dd/MM/yyyy")</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>

    <p>
        <a class="btn btn-primary" style="background-color:#255f9c" asp-route-id="@Model?.Id" asp-controller="Etapas" asp-action="Index">Etapas</a>
    </p>

    <div>
        @if (Model.IsAdmin){
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a><span> | </span>
        }
        <a asp-action="Index">Voltar</a>
    </div>
