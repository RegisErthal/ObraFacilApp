@model IEnumerable<ObraFacilApp.Models.Fundacao>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Fundação</h1>

<form>
    <table class="table">
        <thead>
            <tr>
                <th>Comprimento Alicerce</th>
                <th>Altura Alicerce</th>
                <th>Quantidade de Blocos Alicerce</th>
                <th>Altura Pedra</th>
                <th>Comprimento Pedra</th>
                <th>Altura Viga Baldrame</th>
                <th>Comprimento Viga Baldrame</th>
                <th>Largura Viga Baldrame</th>
                <th>Metragem Cúbica Cimento Viga Baldrame</th>
                <th>Quantidade de Micro Estacas</th>
                <th>Data de Início da Fundação</th>
                <th>Data de Conclusão da Fundação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="text" name="ComprimentoAlicerce"></td>
                <td><input type="text" name="AlturaAlicerce"></td>
                <td><input type="text" name="QtdBlocosAlicerce"></td>
                <td><input type="text" name="AlturaPedra"></td>
                <td><input type="text" name="ComprimentoPedra"></td>
                <td><input type="text" name="AlturaVigaBaldrame"></td>
                <td><input type="text" name="ComprimentoVigaBaldrame"></td>
                <td><input type="text" name="LarguraVigaBaldrame"></td>
                <td><input type="text" name="MetragemCubicaCimentoVigaBaldrama"></td>
                <td><input type="text" name="QtdMicro"></td>
                <td><input type="date" name="DataInicioFundacao"></td>
                <td><input type="date" name="DataConclusaoFundacao"></td>
                <td><button type="submit">Enviar</button></td>
            </tr>
        </tbody>
    </table>
</form>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComprimentoAlicerce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlturaAlicerce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdBlocosAlicerce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlturaPedra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComprimentoPedra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlturaVigaBaldrame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComprimentoVigaBaldrame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LarguraVigaBaldrame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetragemCubicaCimentoVigaBaldrama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdMicro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicioFundacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConclusaoFundacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>
