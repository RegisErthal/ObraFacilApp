@model List<ObraFacilApp.Models.CronogramaViewModel>

@{
    ViewData["Title"] = "Details";
}
<style>
    .green {
        color: green
    }

    .red {
        color: red
    }

    .progress-bar {
        width: 100%;
        height: 20px;
        background-color: #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress {
        height: 100%;
        background-color: #4caf50;
        width: 0;
        transition: width 0.3s ease-in-out;
    }

</style>
<div>
    <h4>Cronograma</h4>
    <hr />
    <dl class="row">
        
        @foreach(var item in Model) 
        {
            
            <table class="table">
                <tbody>
                    <tr>
                        <th>@item.NomeEtapa</th>
                    </tr>
                    <tr>
                        <td>Previsão de início</td>
                        <td>@item.DataInicio.ToString("dd/MM/yyyy")</td>
                        <td>@(item.DataInicioOk ? Html.Raw("<i class='fas fa-check green '></i>") : Html.Raw("<i class='fas fa-times red '></i>"))</td>
                    </tr>
                    <tr>
                        <td>Previsão de conclusão</td>
                        <td>@item.DataFim.ToString("dd/MM/yyyy")</td>
                        <td>@(item.DataFimOk ? Html.Raw("<i class='fas fa-check green '></i>") : Html.Raw("<i class='fas fa-times red '></i>"))</td>
                    </tr>

                </tbody>
            </table>
        }

    </dl>
</div>
