@model ObraFacilApp.Models.CoberturaModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .green {
        color: green
    }

    .red {
        color: red
    }

    .progress-bar {
        width: 100%;
        height: 20px;
        background-color: #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress {
        height: 100%;
        background-color: #4caf50;
        width: 0;
        transition: width 0.3s ease-in-out;
    }
</style>

<div>
    <h4>Cobertura</h4>
    <hr />
    <div class="row">
        <div style="margin-bottom: 10px">
            @foreach (var item in Model.Imagens)
            {
                <div style="float:left; margin: 2px;">
                    <img src="../../imagens/UploadCobertura/@(item.FileName)" class="card-img-top" style="width: 300px" alt="...">
                </div>
            }
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TamanhoCobertura)</th>
                    <td>@Model.TamanhoCobertura</td>
                    <td>@(Model.TamanhoCoberturaOK ? Html.Raw("<i class='fas fa-check green '></i>") : Html.Raw("<i class='fas fa-times red '></i>"))</td>
                </tr>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataInicioCobertura)</th>
                    <td>@Model.DataInicioCobertura.ToString("dd/MM/yyyy")</td>
                    <td>@(Model.DataInicioCoberturaOK ? Html.Raw("<i class='fas fa-check green '></i>") : Html.Raw("<i class='fas fa-times red '></i>"))</td>
                </tr>
                <tr>
                    <th>@Html.DisplayFor(model => model.DataConclusaoCobertura)</th>
                    <td>@Model.DataConclusaoCobertura.ToString("dd/MM/yyyy")</td>
                    <td>@(Model.DataConclusaoCoberturaOK ? Html.Raw("<i class='fas fa-check green '></i>") : Html.Raw("<i class='fas fa-times red '></i>"))</td>
                </tr>

                <tr>
                    <th>@Html.DisplayFor(model => model.PossueLaje)</th>
                    <td>@(Model.PossueLaje ? Html.Raw("Sim") : Html.Raw("Não"))</td>
                    <td>-</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EspessuraLaje)</th>
                    <td>@Model.EspessuraLaje</td>
                    <td>-</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PrevisaoCusto)</th>
                    <td>@Model.PrevisaoCusto</td>
                    <td>-</td>
                </tr>
              
            </tbody>
        </table>
        <div class="progress-bar">
            <div class="progress" style="text-align:center">
                <span class="progress-percentage w-100">0%</span>
            </div>
        </div>
        <div style="margin-top: 20px; border-top: 3px solid #000; padding-top: 5px;">
            Comentários:
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Comentário</th>
                        <th>Usuário</th>
                        <th>Data/Hora Inclusão</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Comentarios)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td>@item.UserName</td>
                            <td>@item.DataCriacao</td>
                            <td>
                                @if (Model.UsuarioLogado.Id == item.UsuarioId)
                                {
                                    <a asp-controller="Cobertura" asp-action="ApagarComentario" asp-route-id="@item.Id">Apagar</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                Deixe seu comentário:
                <form asp-controller="Cobertura" asp-action="SalvarComentario" method="post">
                    <textarea id="comentario" name="comentario"></textarea><br />
                    <input type="hidden" id="entidadeId" name="entidadeId" value="@Model.Id">
                    <button type="submit">Comentar</button>
                </form>
            </div>
            <br />
        </div>
    </div>
</div>
<div>
    <a asp-controller="Etapas" asp-action="Index" asp-route-id="@Model.ProjetoId">Voltar</a>
</div>
@section Scripts
    {
    <script>
        const booleanArray = [@(Model.DataInicioCoberturaOK.ToString().ToLower()), @(Model.DataConclusaoCoberturaOK.ToString().ToLower()), @(Model.TamanhoCoberturaOK.ToString().ToLower())]
        function updateProgressBar() {
            const progressBar = document.querySelector('.progress');
            const progressPercentage = (booleanArray.filter(Boolean).length / booleanArray.length) * 100;
            progressBar.style.width = progressPercentage + '%';

            const progressPercentageElement = document.querySelector('.progress-percentage');
            progressPercentageElement.textContent = Math.round(progressPercentage) + '%';
        }

        updateProgressBar(); // Update the progress bar initially
    </script>
    }