@model ObraFacilApp.Models.CoberturaModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Cobertura</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="ProjetoId" value="@Model.ProjetoId" />

            <div class="form-group">
                <label asp-for="TamanhoCobertura" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="TamanhoCobertura" class="form-control" />
                    <span class="input-group-addon" style="margin-left:10px">
                        <input class="form-check-input" asp-for="TamanhoCoberturaOK"/>
                    </span>
                </div>
                <span asp-validation-for="TamanhoCobertura" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PossueLaje" /> @Html.DisplayNameFor(model => model.PossueLaje)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EspessuraLaje" class="control-label"></label>
                <input asp-for="EspessuraLaje" class="form-control" />
                <span asp-validation-for="EspessuraLaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrevisaoCusto" class="control-label"></label>
                <input asp-for="PrevisaoCusto" class="form-control" />
                <span asp-validation-for="PrevisaoCusto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicioCobertura" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="DataInicioCobertura" class="form-control" type="date" />
                    <span class="input-group-addon" style="margin-left:10px">
                        <input class="form-check-input" asp-for="DataInicioCoberturaOK" /> 
                    </span>
                    <span asp-validation-for="DataInicioCobertura" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataConclusaoCobertura" class="control-label"></label>
                <div class="input-group">
                <input asp-for="DataConclusaoCobertura" class="form-control" type="date" />
                <span class="input-group-addon" style="margin-left:10px">
                    <input class="form-check-input" asp-for="DataConclusaoCoberturaOK" />
                </span>
                </div>
                <span asp-validation-for="DataConclusaoCobertura" class="text-danger"></span>
            </div>
            <br >
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="background-color:#255f9c" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-controller="Etapas" asp-action="Index" asp-route-id="@Model.ProjetoId">Voltar</a>
</div>

